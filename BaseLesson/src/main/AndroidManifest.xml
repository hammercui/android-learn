<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hammer.learandroid">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
        </activity>

        <activity android:name=".MainActivity"
            android:label="main activity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".views.LessonTwoActivity"/>

        <activity android:name=".views.LessonThreeActivity"
            android:label="@string/lesson_three_title"
            android:theme="@style/AppTheme.WithoutActionBar"
            />
        <activity android:name=".views.LessonFiveAvtivity"
            android:theme="@style/AppTheme.WithoutActionBar"
            />

    </application>

</manifest>
